{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "api/*": [ "api/*" ],
      "app/*": [ "app/*" ],
      "assets/*": [ "assets/*" ],
      "components/*": [ "components/*" ],
      "features/*": [ "features/*" ],
      "hooks/*": [ "hooks/*" ],
      "utils/*": [ "utils/*" ],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
